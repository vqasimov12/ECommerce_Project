<UserControl x:Class="ECommerce_Project.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECommerce_Project.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--<PasswordBox x:Name="passwordBox" PasswordChanged="passwordBox_PasswordChanged" Background="Transparent"/>-->
    <PasswordBox x:Name="passwordBox" 
                 PasswordChanged="passwordBox_PasswordChanged" 
                 Background="Transparent"
                 Margin="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:BindablePasswordBox}}, Path=PasswordMargin}" />


</UserControl>
